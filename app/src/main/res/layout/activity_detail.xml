<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.project.huuthiendev.demophongtro.Activity.DetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.v4.view.ViewPager
            android:id="@+id/vpSlide"
            android:layout_width="match_parent"
            android:layout_height="300dp">
        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:layout_marginTop="230dp"
            android:id="@+id/layoutDots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true">
        </LinearLayout>

        <TextView
            android:id="@+id/tvThongTin"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/vpSlide"
            android:text="Thông tin chi tiết"
            android:textColor="@color/colorXamDam"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_below="@id/tvThongTin"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/imgHinhDaiDien"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_mortgagecenter" />

        <TextView
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/tvThongTin"
            android:layout_toRightOf="@id/imgHinhDaiDien"
            android:id="@+id/tvTenChuPhongTro"
            android:textSize="18dp"
            android:textColor="@color/colorXamDam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Huỳnh Hữu thiện"/>

        <TextView
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/tvTenChuPhongTro"
            android:layout_toRightOf="@id/imgHinhDaiDien"
            android:id="@+id/tvNgayDangCT"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày 11 Tháng 11 Năm 2016"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/imgHinhDaiDien"
            android:id="@+id/tvTitleDiaChiCT"
            android:textSize="18dp"
            android:textColor="@color/colorXamDam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ:    "/>

        <TextView
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="2dp"
            android:layout_below="@id/imgHinhDaiDien"
            android:id="@+id/tvDiaChiCT"
            android:layout_toRightOf="@id/tvTitleDiaChiCT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="637/33, Quang Trung, Phường 11, Quận Gò Vấp, TP. HCM"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_below="@id/tvDiaChiCT"
            android:id="@+id/tvTitleDienTichCT"
            android:textSize="18dp"
            android:textColor="@color/colorXamDam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diện tích:   "/>

        <TextView
            android:id="@+id/tvDienTichCT"
            android:layout_toRightOf="@id/tvTitleDienTichCT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDiaChiCT"
            android:layout_marginTop="4dp"
            android:textSize="18dp"
            android:text="30 mét vuông"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:layout_below="@id/tvDienTichCT"
            android:id="@+id/tvTitleGiaPhongCT"
            android:textSize="18dp"
            android:textColor="@color/colorXamDam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá phòng: "/>

        <TextView
            android:id="@+id/tvGiaPhongCT"
            android:layout_toRightOf="@id/tvTitleGiaPhongCT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDienTichCT"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:text="2.000.000 Đồng"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/tvGiaPhongCT"
            android:id="@+id/tvTitleLienHe"
            android:textSize="18dp"
            android:textColor="@color/colorXamDam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liên hệ:      "/>

        <TextView
            android:id="@+id/tvLienHe"
            android:layout_toRightOf="@id/tvTitleLienHe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvGiaPhongCT"
            android:layout_marginTop="15dp"
            android:textSize="18dp"
            android:text="01647585919"/>

        <Button
            android:layout_marginLeft="30dp"
            android:id="@+id/btnGoiCT"
            android:background="@drawable/ic_call_light_green_800_48dp"
            android:layout_below="@id/tvTitleGiaPhongCT"
            android:layout_toRightOf="@id/tvLienHe"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/btnNhanTinCT"
            android:background="@drawable/ic_message_red_900_48dp"
            android:layout_below="@id/tvTitleGiaPhongCT"
            android:layout_toRightOf="@id/btnGoiCT"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/tvLienHe"
            android:id="@+id/tvTitleBanDo"
            android:textSize="18dp"
            android:textColor="@color/colorXamDam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem bản đồ:      "/>

        <Button
            android:layout_marginTop="5dp"
            android:layout_marginLeft="-20dp"
            android:id="@+id/btnBanDo"
            android:background="@drawable/gg_map_icon"
            android:layout_below="@id/tvLienHe"
            android:layout_toRightOf="@id/tvTitleBanDo"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </RelativeLayout>

</ScrollView>
