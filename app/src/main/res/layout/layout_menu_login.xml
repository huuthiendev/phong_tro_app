<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e2dfdf">

    <Button
        android:id="@+id/btnNguoiDung"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:drawableLeft="@drawable/ic_person_light_blue_700_48dp"
        android:paddingLeft="35dp"
        android:drawablePadding="-100dp"
        android:text="Thông tin người dùng"/>

    <Button
        android:id="@+id/btnDangTin"
        android:background="#ffffff"
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:drawableLeft="@drawable/ic_home_purple_800_48dp"
        android:paddingLeft="35dp"
        android:drawablePadding="-120dp"
        android:text="Đăng tin ngay"
        android:layout_below="@+id/btnNguoiDung"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnDangXuat"
        android:background="#ffffff"
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/ic_exit_to_app_deep_orange_a700_48dp"
        android:paddingLeft="35dp"
        android:drawablePadding="-150dp"
        android:text="Đăng xuất"
        android:layout_below="@+id/btnDangTin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnTroGiup"
        android:background="#ffffff"
        android:layout_marginTop="8dp"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/ic_help_green_a700_48dp"
        android:paddingLeft="35dp"
        android:drawablePadding="-160dp"
        android:text="Trợ giúp"
        android:layout_below="@+id/btnDangXuat"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnThongTin"
        android:background="#ffffff"
        android:layout_marginTop="8dp"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/ic_perm_device_information_yellow_700_48dp"
        android:paddingLeft="35dp"
        android:drawablePadding="-150dp"
        android:text="Thông tin"
        android:layout_below="@+id/btnTroGiup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnThoat"
        android:layout_below="@+id/btnThongTin"
        android:background="#ffffff"
        android:layout_marginTop="8dp"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/ic_close_blue_grey_900_48dp"
        android:paddingLeft="35dp"
        android:drawablePadding="-100dp"
        android:text="Thoát ứng dụng"/>

</RelativeLayout>