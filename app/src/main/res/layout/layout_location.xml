<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="#f000"
        android:textSize="18dp"
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thiết đặt tìm kiếm"/>

    <TextView
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorXamDam"
        android:textSize="16dp"
        android:id="@+id/tvBanKinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bán kính: tất cả"/>

    <SeekBar
        android:layout_marginTop="10dp"
        android:progressDrawable="@xml/seekbar_custom"
        android:id="@+id/sbBanKinh"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:max="8"
        android:progress="0"
        android:layout_below="@+id/tvBanKinh"
        android:layout_centerHorizontal="true"
        android:thumb="@drawable/circle_blue"/>

    <TextView
        android:id="@+id/tvGiaPhong"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorXamDam"
        android:textSize="16dp"
        android:text="Giá phòng: tất cả"
        android:layout_below="@+id/sbBanKinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <SeekBar
        android:layout_marginTop="10dp"
        android:progressDrawable="@xml/seekbar_custom"
        android:id="@+id/sbGiaPhong"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="0"
        android:layout_below="@+id/tvGiaPhong"
        android:layout_centerHorizontal="true"
        android:thumb="@drawable/circle_blue"/>

    <TextView
        android:id="@+id/tvDienTich"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorXamDam"
        android:textSize="16dp"
        android:text="Diện tích: tất cả"
        android:layout_below="@+id/sbGiaPhong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <SeekBar
        android:id="@+id/sbDienTich"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:max="10"
        android:progress="0"
        android:layout_below="@+id/tvDienTich"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:thumb="@drawable/circle_blue"
        android:progressDrawable="@xml/seekbar_custom" />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btnTimPhongTro"
        android:layout_centerHorizontal="true"
        android:text="Tìm phòng trọ"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sbDienTich"/>

</RelativeLayout>